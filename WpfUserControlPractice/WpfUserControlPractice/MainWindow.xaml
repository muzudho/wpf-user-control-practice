<Window x:Class="WpfUserControlPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUserControlPractice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- 0行2列のグリッド -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- 0列目 ボタン -->
        <StackPanel>
            <Button Content="Home" Click="HomeButton_Click"/>
            <Button Content="Sample1" Click="Sample1Button_Click" />
            <Button Content="Sample2" Click="Sample2Button_Click"  />
        </StackPanel>

        <!-- 1列目 -->
        <Frame Name="frame" Grid.Column="1"/>

    </Grid>
</Window>
